<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/post_3.linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02" >

        <TextView
            android:id="@+id/post_3.textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.59"
            android:text="发布消息"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <Button
            android:id="@+id/post_4.btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:text="取消" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需求" />

    <EditText
        android:id="@+id/post_4.txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:editable="false" android:enabled="false">

        <requestFocus />
    </EditText>
    <EditText
        android:id="@+id/post_4.txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.44"
        android:inputType="textMultiLine" android:editable="false" android:enabled="false" android:layout_gravity="top" android:gravity="top"/>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/post_4.txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:editable="false" android:enabled="false"/>

            <EditText
                android:id="@+id/post_4.txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:editable="false" android:enabled="false"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/post_4.btn_OK"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:text="提交" android:layout_gravity="bottom|center_vertical|center_horizontal|center"/>

    <LinearLayout
        android:id="@+id/post_1.linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <Button
            android:id="@+id/post_4.btn_to1"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.89"
            android:background="#e0000000"
            android:text="&lt;需求"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/post_4.btn_to2"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.89"
            android:background="#e0000000"
            android:text="&lt;价格"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/post_4.btn_to3"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.89"
            android:background="#e0000000"
            android:text="&lt;时间"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>